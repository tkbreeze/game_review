<%= render "shared/header"%>
<h2>パスワード変更</h2>

<%= form_with model: @user, url: password_path(resource_name), local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3 w-25">
    <%= f.label :password, "New password",class:"form-label" %><br />
    <% if @minimum_password_length %>
      <em>(最小文字数:<%=@minimum_password_length %>文字)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="mb-3 w-25">
    <%= f.label :password_confirmation, "新しいパスワードを認証する", class:"form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "パスワードを変更する", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
