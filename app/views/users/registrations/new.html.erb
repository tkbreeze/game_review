<%content_for(:page_title,'User Create')%>
<%= render "users/shared/error_messages", resource: resource%>
<body class="text-center user">  
  <main class="form-signin w-100 m-auto card">
    <%=link_to "Game Review",root_path,class:"nav-title"%>
    <h1 class="h3 mb-3 fw-normal">アカウント登録</h1>
    <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",placeholder:"name@example.com" %>
        <%= f.label :email, class:"form-label"%>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control",placeholder:"パスワード" %>
        <%= f.label :password, class:"form-label" %>
        <% if @minimum_password_length %>
          <div class="form-text">最小文字数:<%= @minimum_password_length %>文字</div>
        <% end %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control",placeholder:"パスワード確認用"%>
        <%= f.label :password_confirmation, class:"form-label" %>
      </div>
      <div class="form-floating">
        <%= f.text_field :name, autocomplete: "nickname", class:"form-control",placeholder:"名前"%>
        <%= f.label :name, class:"form-label" %>
      </div>
      <div class="mt-3 mb-3">
        <%= f.file_field :avatar, class:"form-control"%>
        <%= f.label :avatar, class:"form-label mb-0" %>
        <div class="form-text mt-0">任意</div>
      </div>
      <div class="actions mb-3">
        <%= f.submit "登録", class:"btn btn-primary" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </main>
</body>
