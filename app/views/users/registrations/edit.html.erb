<%= render "shared/header"%>
<h2><%= resource_name.to_s.humanize %>編集</h2>

<%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在、<%= resource.unconfirmed_email %>のメールアカウントの認証を待っている状態です。</div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(変更したくない場合、空白にしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>最小文字数:<%= @minimum_password_length %>文字</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(変更を認証するために、今のあなたのメールアドレスが必要です。)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当によろしいですか?" }, data: { turbo_method: :delete} %></p>

<%= link_to "戻る", :back %>
