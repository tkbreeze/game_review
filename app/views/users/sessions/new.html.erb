<body class="text-center user">
  <main class="form-signin w-100 m-auto">
    <%=link_to "Game Review",root_path,class:"nav-title"%>
    <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
      <h1 class="h3 mb-3 fw-normal">ログイン</h1>
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" ,placeholder:"name@example.com"%>
        <%= f.label :email, class:"form-label"%>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control",placeholder:"パスワード" %>
        <%= f.label :password, "パスワード", class:"form-label"%><br />
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me , "ログイン状態を保持する"%>
        </div>
      <% end %>
      <div class="w-100 btn btn-lg btn-primary">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    <% end %>
  <%= render "users/shared/links" %>
  </main>
</body>
