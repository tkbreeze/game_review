<body>
<%= render "shared/header" %>
<p><%=@game.title%></p>
<%= form_with model: [@game,@review], local: true do |f| %>
<div class="card">
  <div class="card-body">
    <div class="mb-3">
      <%= f.label :play_hour, { class: "form-label"} %>
      <%= f.number_field :play_hour, step:0.1, class: "form-control", placeholder: "0.1時間刻みで記入"  %>
    </div>

    <div class="mb-3">
      <%= f.label :score, { class: "form-label"} %>
      <%= f.number_field :score,in:0.0..10.0,step:0.1 ,class: "form-control", placeholder: "0.1点刻みで10点満点" %>
    </div>

    <div class="mb-3">
      <%= f.label :good_point, { class: "form-label"} %>
      <%= f.select :good_point, Review.good_points.keys.map{|k| [I18n.t("enums.review.good_point.#{k}"), k] }, { class: "form-control", placeholder: "任意" } %>
    </div>

    <div class="mb-3">
      <%= f.label :bad_point, { class: "form-label"} %>
      <%= f.select :bad_point, Review.bad_points.keys.map{|k| [I18n.t("enums.review.bad_point.#{k}"), k] }, { class: "form-control", placeholder: "任意" } %>
    </div>

    <div class="mb-3">
      <%= f.label :body, { class: "form-label"} %>
      <%= f.text_area :body, size: "70x5" ,class: "form-control"%>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>
</body>